# ==================== API CONFIGURATION ====================
# Backend API base URL
REACT_APP_API_URL=http://localhost:8080/api

# ==================== APPLICATION CONFIGURATION ====================
# App name displayed in UI
REACT_APP_APP_NAME=Thế Giới Sách

# App version
REACT_APP_VERSION=1.0.0

# ==================== ENVIRONMENT ====================
# Node environment (development, production, test)
NODE_ENV=development

# Generate sourcemaps for production build
GENERATE_SOURCEMAP=false

# ==================== FEATURES FLAGS ====================
# Enable/disable certain features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_SERVICE_WORKER=false

# ==================== THIRD-PARTY SERVICES ====================
# Google Analytics (if enabled)
# REACT_APP_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Facebook Pixel (if enabled)
# REACT_APP_FACEBOOK_PIXEL_ID=YOUR_PIXEL_ID

# Sentry for error tracking (if enabled)
# REACT_APP_SENTRY_DSN=YOUR_SENTRY_DSN

# ==================== PAYMENT CONFIGURATION ====================
# PayPal (if implemented)
# REACT_APP_PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID

# Stripe (if implemented)
# REACT_APP_STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_KEY

# ==================== DEVELOPMENT CONFIGURATION ====================
# Port for development server
PORT=3000

# Browser to open during development
BROWSER=default

# Disable automatic browser opening
BROWSER=none

# ==================== BUILD CONFIGURATION ====================
# Build path
BUILD_PATH=build

# Public URL path
PUBLIC_URL=/

# ==================== MISC ====================
# Disable ESLint warnings
ESLINT_NO_DEV_ERRORS=false

# Fast refresh
FAST_REFRESH=true 